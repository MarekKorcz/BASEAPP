<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src=https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <script src="../js/server-list.js"></script>
    <script src="../js/app.js"></script>
    <link rel="stylesheet" href="../css/app.css">
    <link rel="stylesheet" href="../css/server_list.css">
    
    <title>Servers List</title>
</head>
<body>
    <div class="container text-center" style="padding: 1rem;">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <a id="create" class="btn btn-success">Create</a>
            </div>
            <div class="col-4">
                <a id="logout" class="btn btn-primary">Logout</a>
            </div>
        </div>
    </div>
    <div class="container">
        <h1 class="text-center" style="padding-top: 2rem;">Servers List</h1>
        <% if(servers.length > 0) { %>
            <ul id="server-list" class="list-group" style="padding: 1rem 6rem 0 6rem;">
                <% servers.forEach((server) => { %>
                    <li class="list-group-item server1">
                        <div class="server-info text-center">
                            <div class="row">
                                <div class="col-3">
                                    <p>
                                        <%= `Host: ${server.host}` %>
                                    </p>
                                </div>
                                <div class="col-3">
                                    <p>
                                        <%= `User: ${server.user}` %>
                                    </p>
                                </div>
                                <div class="col-3">
                                    <p>
                                        <%= `User: ${server.port}` %>
                                    </p>
                                </div>
                                <div class="col-2">
                                    <a class="delete btn btn-danger" style="color: white;" data-id="<%= server._id %>">Delete</a>
                                </div>
                            </div>
                        </div>

                        <div class="server-button text-center">
                            <button class="btn btn-primary" style="margin-left: 2rem;">Run</button>
                        </div>
                        <div class="server-response"></div>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>
</body>
</html>